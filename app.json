{
  "expo": {
    "name": "poketeam",
    "slug": "poketeam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.jpg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo-text.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "poketeam",
    "ios": {
      "bundleIdentifier": "com.ifn666.poketeam",
      "infoPlist": {
        "NSCameraUsageDescription": "PokeTeam needs access to your Camera."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.jpg",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["android.permission.CAMERA", "android.permission.CAMERA"],
      "package": "com.ifn666.poketeam"
    },
    "plugins": [
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "PokeTeam needs access to your Camera."
        }
      ]
    ]
  }
}
